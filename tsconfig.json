{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "moduleResolution": "node",
        "baseUrl": "./src",
        "paths": {
            "@problems/*": ["problems/*"],
            "@tests/*": ["../tests/*"],
            "~/*": ["*"]
        },
        "rootDirs": ["src"],
        "types": ["node", "jest"],
        "resolveJsonModule": true,
        "sourceMap": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true
    },
    "include": ["src", "tests"],
    "exclude": ["node_modules"]
}
